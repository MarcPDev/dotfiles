#
# bspwm hotkeys
#

# beendet bspwm
super + alt + Escape
	bspc quit

# schließt Fenster
super + w
	bspc window -c

# wechsel zum nächsten Layout
super + t
	bspc desktop -l next

# balance tree
super + b
	bspc desktop -B

# schaltet zwischen Fenster und Vollbild
super + {s,f}
	bspc window -t {floating,fullscreen}


super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

# tauscht das aktuelle Fenster mit dem größten
super + m
	bspc window -s biggest

# Springt / verschiebt aktuelles Fenster  ins benachbarte Fenster
super + {_,shift + }{Left,Down,Up,Right}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

# zirkuliert die Anordnung der Fenster
super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

# vergrößert Fenster
super + alt + {Left,Down,Up,Right}
	bspc window -e {left -10,down +10,up -10,right +10}

# verkleinert Fenster
super + alt + shift + {Right,Up,Down,Left}
	bspc window -e {right -10,up +10,down -10,left +10}

# setzt Splitratio des gewählten Fenster auf 0 < ratio < 1
super + ctrl + {1-9}
	bspc window -r 0.{1-9}

# wechsel auf / verschieben des aktuellen Fensters nach Desktop #
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt

super + space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
